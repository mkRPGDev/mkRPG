<Actions>
    <Action>
        <Event val="start"/>
        <Order type="timer">
            <event val="tick"/>
            <value val="2000"/>
        </Order>
        <Order type="event">
            <target val=""/>
            <event val="repom"/>
        </Order>
    </Action>
    
    <Action>
        <Event val="repom"/>
        <Order type="set">
            <target val="world.pomme"/>
            <param val="x"/>
            <value val="randint(0,world.currentMap.width-1)"/>
        </Order>
        <Order type="set">
            <target val="world.pomme"/>
            <param val="y"/>
            <value val="randint(0,world.currentMap.height-1)"/>
        </Order>
        <Order type="condition">
            <value val="world.currentMap.cellsGrid[world.pomme.x][world.pomme.y].mortelle"/>
            <event val="repom"/>
        </Order>        
    </Action>
    
    <Action>
        <Event val="tick"/>
        <Order type="timer">
            <event val="tick"/>
            <value val="150"/>
        </Order>
        <Order type="event">
            <target val="entities[0]"/>
            <event val="move"/>
        </Order>
        <Order type="set">
            <target val="world"/>
            <param val="step"/>
            <value val="world.step + 1"/>
        </Order>
    </Action>
    
    <Action>
        <Event val="grandit"/>
        <Order type="event">
            <target val=""/>
            <event val="repom"/>
        </Order>
        <Order type="set">
            <target val="emitter"/>
            <param val="score"/>
            <value val="self.score + 1"/>
        </Order>
    </Action>
    
    <Action>
        <Event val="move"/>
        <Order type="condition">
            <value val="self.x==world.pomme.x and self.y==world.pomme.y"/>
            <event val="grandit"/>
        </Order>        
        <Order type="create">
            <base id="corps"/>
            <init val="obj.x=emitter.x; obj.y=emitter.y; obj.case=emitter.case; obj.size=emitter.score*2+3"/>
            <event val="initcorps"/>
        </Order>   
        <Order type="set">
            <target val="emitter"/>
            <param val="x"/>
            <value val="(self.x + [-1,1,0,0][self.dir])%self.map.width"/>
        </Order>
        <Order type="set">
            <target val="emitter"/>
            <param val="y"/>
            <value val="(self.y + [0,0,-1,1][self.dir])%self.map.height"/>
        </Order>
        <Order type="setObj">
            <target val="emitter"/>
            <param val="case"/>
            <value val="self.map.cellsGrid[self.x][self.y]"/>
        </Order>
        <Order type="condition">
            <value val="self.case.mortelle"/>
            <event val="end"/>
        </Order>
    </Action>

    <Action>
        <Event val="initcorps"/>
        <Order type="set">
            <target val="emitter.case"/>
            <param val="mortelle"/>
            <value val="1"/>
        </Order>
<!--
        <Order type="timer">
            <value val="self.temps"/>
            <event val="detruit"/>
        </Order>
-->
        <Order type="watchdog">
            <target val="world"/>
            <param val="step"/>
            <value val="world.step+self.size"/>
            <event val="detruit"/>
            <once val="True"/>
        </Order>
    </Action>

    <Action>
        <Event val="detruit"/>
        <Order type="set">
            <target val="emitter.case"/>
            <param val="mortelle"/>
            <value val="0"/>
        </Order>
        <Order type="destroy">
        </Order>
    </Action>
    
    <Action> <!-- x+=1 -->
        <Event val="moveright"/>
        <Order type="set">
            <target val="emitter"/>
            <param val="dir"/>
            <value val="1 if self.dir!=0 else 0"/>
        </Order>    
    </Action>
    <Action> <!-- x-=1 -->
        <Event val="moveleft"/>
        <Order type="set">
            <target val="emitter"/>
            <param val="dir"/>
            <value val="0 if self.dir!=1 else 1"/>
        </Order>    
    </Action>
    <Action> <!-- y+=1 -->
        <Event val="moveup"/>
        <Order type="set">
            <target val="emitter"/>
            <param val="dir"/>
            <value val="3 if self.dir!=2 else 2"/>
        </Order>    
    </Action>
    <Action> <!-- y-=1 -->
        <Event val="movedown"/>
        <Order type="set">
            <target val="emitter"/>
            <param val="dir"/>
            <value val="2 if self.dir!=3 else 3"/>
        </Order>    
    </Action>
</Actions>
